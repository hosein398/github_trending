<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_width="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_icon"
            android:layout_width="@dimen/bottom_bar_icon_size"
            android:layout_height="@dimen/bottom_bar_icon_size"
            tools:src="@mipmap/ic_launcher" />

        <ir.oxima.githubtrending.other.components.TextViewCell
            android:id="@+id/tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_bar_title_top_margin"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="@dimen/bottom_bar_title_inactive_font_size"
            tools:text="Item title" />
    </LinearLayout>

</LinearLayout>