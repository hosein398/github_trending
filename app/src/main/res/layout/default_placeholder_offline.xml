<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:padding="@dimen/_10sdp">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/state_image"
			android:layout_width="@dimen/_48sdp"
			android:layout_height="@dimen/_48sdp"
			android:layout_gravity="center_horizontal"
			android:tint="@color/grey_light"
			android:layout_marginBottom="@dimen/_15sdp"
			app:srcCompat="@drawable/ic_signal_wifi_off_black_24dp"
			android:visibility="visible"/>

		<ir.oxima.githubtrending.other.components.TextViewCell			android:id="@+id/state_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/grey_light"
			android:text="@string/no_connected"/>
	</LinearLayout>
</FrameLayout>
